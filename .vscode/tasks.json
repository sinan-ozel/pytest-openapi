{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "composeService",
      "type": "pickString",
      "description": "Choose the service to start for contract tests",
      "options": [
        "mock-server-missing-openapi",
        "mock-server-no-examples",
        "mock-server-valid-api",
        "mock-server-post-500-error",
        "mock-server-post-response-missing-key",
        "mock-server-post-response-wrong-type",
        "mock-server-get-missing-key",
        "mock-server-nested-valid-api",
        "mock-server-missing-descriptions",
        "mock-server-post-example-missing-key",
        "mock-server-get-type-mismatch",
        "mock-server-delete-wrong-status",
        "mock-server-schema-based-api",
        "mock-server-put-response-missing-key",
        "mock-server-email-server"
      ],
      "default": "mock-server-schema-based-api"
    },
    {
      "id": "pytestArgs",
      "type": "promptString",
      "description": "Additional pytest arguments (e.g., -v, -s, -k test_name)",
      "default": ""
    }
  ],
  "tasks": [
    {
      "label": "run-mock-server",
      "type": "shell",
      "command": "${workspaceFolder}/.vscode/run_mock.sh",
      "args": [
        "${input:composeService}",
        "${input:pytestArgs}"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "-f", "${workspaceFolder}/tests/docker-compose.yaml",
        "--project-directory", "${workspaceFolder}/tests",
        "up",
        "--build",
        "--abort-on-container-exit",
        "--exit-code-from", "test"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "-f", "${workspaceFolder}/lint/docker-compose.yaml",
        "--project-directory", "${workspaceFolder}/lint",
        "up",
        "--build",
        "--abort-on-container-exit",
        "--exit-code-from", "linter"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "validate-docs",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "-f", "${workspaceFolder}/docs-validate/docker-compose.yaml",
        "--project-directory", "${workspaceFolder}/docs-validate",
        "up",
        "--build",
        "--abort-on-container-exit",
        "--exit-code-from", "docs-validator"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}


